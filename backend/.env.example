# Variables de entorno para el backend

# Puerto del servidor
PORT=8080

# Entorno de ejecución
NODE_ENV=development

# Base de datos MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/nombre_base_datos

# Clave secreta para JWT (CAMBIAR EN PRODUCCIÓN)
JWT_SECRET=mNy...



# Configuración de CORS (URLs permitidas del frontend)
FRONTEND_URLS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Configuración de rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Configuración de bcrypt
BCRYPT_ROUNDS=12

# Clave API de YouTube (CAMBIAR POR TU PROPIA CLAVE)
YOUTUBE_API_KEY=AIza...
